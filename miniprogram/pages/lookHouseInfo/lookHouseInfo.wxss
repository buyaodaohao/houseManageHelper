/* pages/lookHouseInfo/lookHouseInfo.wxss */

page
{
  width: 100%;
  height: max-content;
  background-color: white;
}
.kind-switch-container
{
    position: fixed;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    background-color: white;
    z-index: 200;
}
.item-value-normal
{
  margin-left: 30rpx;
  margin-top: 15rpx;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  height: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 50rpx;
  text-align: center;
  color: #404040;
}
.item-value-selected
{
  margin-left: 30rpx;
  margin-top: 15rpx;
  background-color: #0682ff;
  border-radius: 25rpx;
  height: 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 50rpx;
  text-align: center;
  color: white;
}
.table-view-container
{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  height: max-content;
}
.item-container
{
margin-top: 30rpx;
background: #FFFFFF;
box-shadow: 0px 4px 30px 0px rgba(184, 184, 184, 0.38);
border-radius: 20rpx;
display: flex;
flex-direction: column;
margin-left: 30rpx;
width: calc(100% - 60rpx);
height: max-content;
}
.common-label
{
margin-left: 20rpx;
margin-top: 20rpx;

font-size: 26rpx;
font-family: PingFang SC;
font-weight: 500;
color: #87898D;
line-height: 40rpx;
height: max-content;
}
