/* pages/queryHouseInfoList/queryHouseInfoList.wxss */
page
{
  width: 100%;
  height: max-content;
  background-color: white;
}
.kind-switch-container
{
    position: fixed;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    background-color: white;
    z-index: 200;
}
.item-value-normal
{
  margin-left: 30rpx;
  margin-top: 15rpx;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  height: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 50rpx;
  text-align: center;
  color: #404040;
}
.item-value-selected
{
  margin-left: 30rpx;
  margin-top: 15rpx;
  background-color: #0682ff;
  border-radius: 25rpx;
  height: 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 50rpx;
  text-align: center;
  color: white;
}
.table-view-container
{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  height: max-content;
  margin-bottom: 142rpx;
}
.item-container
{
margin-top: 30rpx;
background: #FFFFFF;
box-shadow: 0px 4px 30px 0px rgba(184, 184, 184, 0.38);
border-radius: 20rpx;
display: flex;
flex-direction: column;
margin-left: 30rpx;
width: calc(100% - 60rpx);
height: max-content;
}
.common-label
{
margin-left: 20rpx;
margin-top: 20rpx;

font-size: 26rpx;
font-family: PingFang SC;
font-weight: 500;
color: #87898D;
line-height: 40rpx;
height: max-content;
}
.address-label
{
margin-left: 20rpx;
margin-top: 20rpx;
line-height: 40rpx;
height: max-content;
font-size: 30rpx;
font-family: PingFang SC;
font-weight: 800;
color: #1A1A1A;
}
.item-container-debt
{
  margin-top: 30rpx;
background: #FFFFFF;
border: 4rpx solid rgba(229,57,53,0.38);
border-radius: 20rpx;
display: flex;
flex-direction: column;
margin-left: 30rpx;
width: calc(100% - 60rpx);
height: max-content;
}
.sure-btn {
        margin-left: calc((100% - 250rpx) / 2.0);
        width: 250rpx;
        height: 70rpx;
        line-height: 70rpx;
        font-family: PingFang SC;
        font-weight: bold;
        /* background: rgb(98, 207, 117);
        box-shadow: 0px 2rpx 38rpx 0px rgba(98, 207, 117, 0.4); */
        background: linear-gradient(90deg, rgba(18, 169, 255, 1), rgba(1, 113, 255, 1));
        box-shadow: 0px 1px 19px 0px rgba(71, 145, 255, 0.4);
        border-radius: 35rpx;
        color: white;
        text-align: center;
        margin-bottom: 30rpx;
    }


    .bottom-action-container-view {
        position: fixed;
        bottom: 0px;
        width: 100%;
        height: 112rpx;
        align-items: center;
        box-shadow: 0px 0px 2rpx 0px rgba(121, 121, 121, 0.28);
        display: flex;
        flex-direction: row;
        background-color: white;
        z-index: 200;
        background: linear-gradient(90deg, rgba(18, 169, 255, 1), rgba(1, 113, 255, 1));
    }

    .register-btn {
        margin-left: calc((100% - 500rpx) / 2.0);
        width: 500rpx;
        height: 70rpx;
        line-height: 70rpx;
        font-family: PingFang SC;
        font-weight: bold;
        border-radius: 35rpx;
        color: white;
        text-align: center;
    }
    .no-data-img
    {
      margin-left: 60rpx;
      width: calc(100% - 120rpx);
      height: 400rpx;
      margin-top: calc((100vh - 400rpx - 112rpx - 80rpx) / 2.0);
    }