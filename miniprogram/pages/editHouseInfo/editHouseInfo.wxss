/* pages/editHouseInfo/editHouseInfo.wxss */
@import "../common/lib/weui.wxss";
.form-input-item-container-view
{
  position: relative;
   display: flex;
   flex-direction: column;
    width: 100%;
    height: max-content;
  /* margin-bottom: 66rpx;      */
}
.value-input {
        padding-left: 16rpx;
        margin-left: 30rpx;
        margin-top: 24rpx;
        width: calc(100% - 60rpx - 16rpx);
        height: 80rpx;
        line-height: 80rpx;
        background: rgba(246, 250, 255, 1);
        border: 1rpx solid rgba(182, 182, 182, 1);
        border-radius: 6rpx;
        font-size: 28rpx;
        font-family: PingFang SC;
        font-weight: 500;

    }
    .radio-container
    {
      display: flex;
      flex-direction: row;
      margin-top: 20rpx;
    }
    .inputHouseDescription {
  width: calc(100% - 60rpx - 18rpx - 10rpx);
  height: 180rpx;
  margin-left: 30rpx;
  margin-top: 23.5rpx;
  /* padding-top: 20rpx; */
  /* padding-bottom: 20rpx; */
  padding-left: 18rpx;
  padding-right: 10rpx;
  background-color: white;
  font-size: 30rpx;
  margin-bottom: 66px;
}
.bottom-action-container-view {
        position: fixed;
        bottom: 0px;
        width: 100%;
        height: 56px;
        align-items: center;
        box-shadow: 0px 0px 1px 0px rgba(121, 121, 121, 0.28);
        display: flex;
        flex-direction: row;
        background-color: white;
        z-index: 200;
    }

    .register-btn {
        margin-left: calc((100% - 250px) / 2.0);
        width: 250px;
        height: 35px;
        line-height: 35px;
        font-family: PingFang SC;
        font-weight: bold;
        background: linear-gradient(90deg, rgba(18, 169, 255, 1), rgba(1, 113, 255, 1));
        box-shadow: 0px 1px 19px 0px rgba(71, 145, 255, 0.4);
        border-radius: 18px;
        color: white;
        text-align: center;
    }
    .picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}
